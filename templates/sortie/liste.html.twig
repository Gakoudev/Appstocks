{% extends 'acceil.html.twig' %}

{% block title %}Gestion des sorties{% endblock %}

{% block body %}
<div class="row"> 
    <div class="container col-md-7">
        <div class="card"> 
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">Liste des Ventes</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Identifiant</th>
                                <th>Date</th>
                                <th>Quantite vendue</th>
                                <th>Produit</th>
                                <th>Prix</th>
                                <th>Gérant</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Identifiant</th>
                                <th>Date</th>
                                <th>Quantite vendue</th>
                                <th>Produit</th>
                                <th>Prix</th>
                                <th>Gérant</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            {% for s in sorties %}
                                <tr>
                                <td>{{ s.id }}</td>
                                <td>{{ s.dateS|date('d/m/y') }}</td>
                                <td>{{ s.qtS }}</td>
                                <td>{{ s.produit }}</td>
                                <td>{{ s.prix }}</td>
                                <td>{{ s.user }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="container col-md-5"> 
        <div class="card"> 
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">Formulaire de gestion des ventes</h6>
            </div>
            <div class="card-body">
                {% if error_message is defined %}
                    <div class = "alert alert-danger"> {{error_message}} </div>
                {% endif %}
                {{form(form)}}
            </div>
        </div>
    </div>
</div>
{% endblock %}
